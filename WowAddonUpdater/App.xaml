<Application x:Class="WowAddonUpdater.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WowAddonUpdater"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3F37C9"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CC9F0"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="UpdatedSuccessColor" Color="#2E7D32"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F9A826"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E63946"/>
        <SolidColorBrush x:Key="LightGray" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="MediumGray" Color="#DEE2E6"/>
        <SolidColorBrush x:Key="DarkGray" Color="#6C757D"/>
        <SolidColorBrush x:Key="TextColor" Color="#212529"/>

        <DropShadowEffect x:Key="CardShadow" ShadowDepth="1" Direction="270" Color="#22000000" BlurRadius="10" Opacity="0.3"/>
    </Application.Resources>
</Application>